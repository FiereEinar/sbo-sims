<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Transaction Report</title>
		<style>
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
				font-size: small;
			}

			body {
				font-family: Arial, sans-serif;
			}

			.header-logo {
				width: 5rem;
				height: 5rem;
			}

			h1 {
				text-align: center;
				color: #333;
			}

			h2 {
				font-size: medium;
			}

			.header {
				display: flex;
				justify-content: center;
				align-items: center;
				gap: 5rem;
			}

			.header > div > * {
				text-align: center;
			}

			.header p {
				color: #666;
			}

			table {
				width: 100%;
				border-collapse: collapse;
				margin-top: 20px;
			}

			th,
			td {
				border: 1px solid #ddd;
				padding: 10px;
				text-align: center;
			}

			th {
				background-color: #f4f4f4;
				color: #333;
				font-weight: bold;
			}

			/* tr:nth-child(even) {
				background-color: #f9f9f9;
			} */

			/* .status {
				font-weight: bold;
				color: #fff;
				padding: 5px 10px;
				border-radius: 4px;
			} */

			/* .status.paid {
				background-color: #4caf50;
			}

			.status.partial {
				background-color: #ff9800;
			}

			.status.cancelled {
				background-color: #f44336;
			} */

			.total-row {
				font-weight: bold;
				background-color: #f4f4f4;
			}

			.total-label {
				text-align: left;
				padding-right: 15px;
			}

			.signature {
				display: flex;
				justify-content: space-between;
				margin-top: 5rem;
			}

			.signature > .signature-col {
				display: flex;
				flex-direction: column;
				gap: 3rem;
			}

			.signature > .signature-col > div {
				display: flex;
				flex-direction: column;
				align-items: center;
				justify-content: center;
			}
		</style>
	</head>
	<body>
		<div class="header">
			<img class="header-logo" src="SBO_LOGO.png" alt="" />
			<div>
				<!-- <h2>Transaction Report for <%= period %></h2> -->
				<h2>Bukidnon State Univerity</h2>
				<h2>Student Body Organization</h2>
				<h2>Transactions Report</h2>
				<p>From <%= startDate %> to <%= endDate %></p>
			</div>
			<img class="header-logo" src="BUKSU_LOGO.png" alt="" />
		</div>

		<table>
			<thead>
				<tr>
					<th>Student ID</th>
					<th>Fullname</th>
					<th>Course</th>
					<th>Year</th>
					<th>Date</th>
					<th>Organization</th>
					<th>Category</th>
					<th>Status</th>
					<th>Amount</th>
				</tr>
			</thead>
			<tbody>
				<% transactions.forEach(item => { %>
				<tr>
					<td><%= item.studentID %></td>
					<td><%= item.fullname %></td>
					<td><%= item.course %></td>
					<td><%= item.year %></td>
					<td><%= item.date %></td>
					<td><%= item.organization %></td>
					<td><%= item.category %></td>
					<td>
						<span class="status <%= item.status.toLowerCase() %>">
							<%= item.status %>
						</span>
					</td>
					<td>P<%= item.amount %></td>
				</tr>
				<% }); %>
			</tbody>

			<div>
				<tr class="total-row">
					<td colspan="8" class="total-label">Total Amount:</td>
					<td>P<%= totalAmount %></td>
				</tr>
			</div>
		</table>

		<div class="signature">
			<div class="signature-col">
				<div>
					<p>_______________________</p>
					<p>Jhon Lester Ybanez</p>
					<h3>COT - SBO, Governor</h3>
				</div>
				<div>
					<p>_______________________</p>
					<p>Jeff Ivan Mayor</p>
					<h3>COT - SBO, Treasurer</h3>
				</div>
			</div>

			<div class="signature-col">
				<div>
					<p>_______________________</p>
					<p>Louie Jay Labastida</p>
					<h3>COT - SBO, Adviser</h3>
				</div>
			</div>
		</div>
	</body>
</html>
